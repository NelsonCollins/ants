<div class="col-md-12 "align="center"><%=image_tag 'nd.png', :size => '100%'%>
  <div class="col-sm-9 col-sm-offset-3 col-md-7 col-md-offset-2" align="center" style="box-shadow: 10px 10px 5px #888888">
    <div class="thumbnail" >
      <div class="caption" >
				<div align="left"><h4>Resend unlock instructions</h4></div>
					<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>
					  <div class="field">
					    <%= f.label :email %><br />
					    <%= f.email_field :email, autofocus: true %>
					  </div>
					  <div class="actions">
					    <%= f.submit "Resend unlock instructions" %>
					  </div>
					<% end %>
						<div align="right"><%= render "devise/shared/links" %></div>
			</div>
		</div>
	</div>
</div>

