<table>
	<tr>
		<%=form_for @post do |f| %>
	<div class="field">
		<%=f.label :title%><br>
		<%=f.text_field :title,  :size => '68x5'%>
	</div>
	<div class="field">
		<%=f.label :content%><br>
		<%=f.text_area :content, :size => '75x10' %>
	</div>
	<div class="field">
	    <%= f.label :image %><br>
	    <%= f.file_field :image %>
	</div>
		<br/>
		<br/>
		<br/>
	<div class="field"><%=f.label :Learn_agriculture%><br>
		<%=f.text_area :advert, :size => '30x5' %>
	</div>
